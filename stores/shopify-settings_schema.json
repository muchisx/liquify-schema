{
  "title": "JSON Schema for Shopify Settings Schema",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "theme": {
      "type": "object",
      "required": [
        "name",
        "theme_name",
        "theme_author",
        "theme_version",
        "theme_documentation_url"
      ],
      "properties": {
        "name": {
          "type": "string",
          "description": "The value of this attribute must be theme_info."
        },
        "theme_name": {
          "type": "string",
          "description": "The name of the theme."
        },
        "theme_author": {
          "type": "string",
          "description": "The author of the theme."
        },
        "theme_version": {
          "type": "string",
          "description": "The version number of the theme, eg: 1.0.0."
        },
        "theme_documentation_url": {
          "type": "string",
          "description": "A URL where merchants can find documentation for the theme."
        },
        "theme_support_url": {
          "type": "string",
          "description": "A URL where merchants can find support for the theme."
        },
        "theme_support_email": {
          "type": "string",
          "description": "An email address that merchants can contact for support for the theme."
        }
      },
      "anyOf": [
        {
          "required": ["theme_support_url"]
        },
        {
          "required": ["theme_support_email"]
        }
      ],
      "defaultSnippets": [
        {
          "label": "Theme settings",
          "description": "Required theme settings",
          "body": {
            "name": "$1",
            "theme_name": "$2",
            "theme_author": "$3",
            "theme_version": "$4",
            "theme_documentation_url": "$5",
            "theme_support_url": "$6"
          }
        }
      ]
    },
    "settings_group": {
      "type": "object",
      "required": ["name", "settings"],
      "properties": {
        "name": {
          "type": "string"
        },
        "settings": {
          "$ref": "#/definitions/settings"
        }
      },
      "additionalProperties": false
    },
    "settings": {
      "type": "array",
      "markdownDescription": "./descriptions/sections/settings/settings.md",
      "items": {
        "$ref": "./input-settings-snippets.json#/definitions/allSnippets",
        "anyOf": [
          {
            "$ref": "./input-settings.json#/definitions/general"
          },
          {
            "$ref": "./input-settings.json#/definitions/article"
          },
          {
            "$ref": "./input-settings.json#/definitions/blog"
          },
          {
            "$ref": "./input-settings.json#/definitions/checkbox"
          },
          {
            "$ref": "./input-settings.json#/definitions/collection_list"
          },
          {
            "$ref": "./input-settings.json#/definitions/collection"
          },
          {
            "$ref": "./input-settings.json#/definitions/color_background"
          },
          {
            "$ref": "./input-settings.json#/definitions/color_scheme_group"
          },
          {
            "$ref": "./input-settings.json#/definitions/color_scheme"
          },
          {
            "$ref": "./input-settings.json#/definitions/color"
          },
          {
            "$ref": "./input-settings.json#/definitions/header"
          },
          {
            "$ref": "./input-settings.json#/definitions/html"
          },
          {
            "$ref": "./input-settings.json#/definitions/image_picker"
          },
          {
            "$ref": "./input-settings.json#/definitions/font_picker"
          },
          {
            "$ref": "./input-settings.json#/definitions/inline_richtext"
          },
          {
            "$ref": "./input-settings.json#/definitions/link_list"
          },
          {
            "$ref": "./input-settings.json#/definitions/liquid"
          },
          {
            "$ref": "./input-settings.json#/definitions/number"
          },
          {
            "$ref": "./input-settings.json#/definitions/page"
          },
          {
            "$ref": "./input-settings.json#/definitions/paragraph"
          },
          {
            "$ref": "./input-settings.json#/definitions/product_list"
          },
          {
            "$ref": "./input-settings.json#/definitions/product"
          },
          {
            "$ref": "./input-settings.json#/definitions/radio"
          },
          {
            "$ref": "./input-settings.json#/definitions/range"
          },
          {
            "$ref": "./input-settings.json#/definitions/richtext"
          },
          {
            "$ref": "./input-settings.json#/definitions/select"
          },
          {
            "$ref": "./input-settings.json#/definitions/text"
          },
          {
            "$ref": "./input-settings.json#/definitions/textarea"
          },
          {
            "$ref": "./input-settings.json#/definitions/url"
          },
          {
            "$ref": "./input-settings.json#/definitions/video_url"
          },
          {
            "$ref": "./input-settings.json#/definitions/video"
          }
        ]
      }
    }
  },
  "type": "array",
  "minItems": 2,
  "items": [
    {
      "$ref": "#/definitions/theme"
    },
    {
      "$ref": "#/definitions/settings_group"
    }
  ],
  "additionalItems": {
    "$ref": "#/definitions/settings_group"
  }
}
